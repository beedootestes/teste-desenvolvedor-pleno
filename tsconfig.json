{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],      
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": false,
    "strictPropertyInitialization": false,
    "baseUrl": ".",      
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@docs/*": [
        "./src/docs/*",
        "./src/modules/sentence/infra/docs/*.ts"
      ],
      "@entities/*": [
        "./src/modules/sentence/infra/typeorm/entities/*.ts"
      ],
      "@routes/*": [
        "./src/modules/sentence/infra/http/routes/*.ts"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
